@page "{id}"
@model Kalamarket.Web.Pages.Admin.Groups.DeleteModel

@{
    ViewData["Title"] = "حذف";
}
<h3>ايا از حذف @Model.Group.GroupTitle مطمين هستيد؟</h3>
<div>
    
    <hr />
    <div class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Group.GroupTitle)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Group.GroupTitle)
        </dd>
    </div>
    
    <form method="post">
        <input type="hidden" asp-for="Group.GroupId" />
        <input type="submit" value="حذف" class="btn btn-danger my-3" />
    </form>
</div>
