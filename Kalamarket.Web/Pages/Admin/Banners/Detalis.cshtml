@page "{id}"
@model Kalamarket.Web.Pages.Admin.Banners.DetalisModel

<style>
    #iiimg {
        max-height: 200px;
        max-width: 200px
    }
</style>
<h1>جزييات</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            تصوير بنر :
        </dt>
        <dd class="col-sm-10">
            <img id="iiimg" src="~/Banners/@Model.Banner.ImageName" />
        </dd>
        <dt class="col-sm-2">
            لينک بنر :
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Banner.ImageUrl)
        </dd>
        
    </dl>
</div>