@page "{id}"
@model Kalamarket.Web.Pages.Admin.Banners.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<style>
    #mg {
        max-height: 200px;
        max-width: 200px
    }
</style>
<h1>حذف</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            تصوير بنر :
        </dt>
        <dd class="col-sm-10">
            <img id="mg" src="~/Banners/@Model.Banner.ImageName" />
        </dd>
        <dt class="col-sm-2">
            لينک بنر :
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Banner.ImageUrl)
        </dd>
    </dl>
</div>


    <form method="post">
        <input type="hidden" asp-for="Banner.BannerId" />
        <input type="submit" value="حذف" class="btn btn-danger" />
    </form>

