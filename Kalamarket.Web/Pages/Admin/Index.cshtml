@page
@using Kalamarket.Core.Service.Interface
@model Kalamarket.Web.Pages.Admin.IndexModel
@{
}

@inject IPermissionSrvice _PermissionSrvice;
<!-- start page content wrapper-->
<!-- start page content-->
<!--start breadcrumb-->
<div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
	<div class="breadcrumb-title pe-3"><a href="/">صفحه اصلی</a></div>
	<div class="ps-3">
		<nav aria-label="breadcrumb">
			<ol class="breadcrumb mb-0 p-0 align-items-center">
				<li class="breadcrumb-item">
					<a href="javascript:;">
						<ion-icon name="home-outline"></ion-icon>
					</a>
				</li>
			</ol>
		</nav>
	</div>

</div>
<!--end breadcrumb-->
@if (User.Identity.IsAuthenticated && _PermissionSrvice.IsUserInRole(User.Identity.Name, 8))
{
	<div class="row row-cols-1 row-cols-lg-2 row-cols-xxl-4">
		<div class="col">
			<div class="card radius-10">
				<div class="card-body">
					<div class="d-flex align-items-start gap-2">
						<div>
							<p class="mb-0 fs-6">مقدار درامد</p>
						</div>
						<div class="ms-auto widget-icon-small text-white bg-gradient-purple">
							<ion-icon name="wallet-outline"></ion-icon>
						</div>
					</div>
					<div class="d-flex align-items-center mt-3">
						<div>
							<h4 class="mb-0">@Model.AdminIndex.TotalRevenue.ToString("#,0 تومان")</h4>
						</div>
					</div>
				</div>
			</div>
		</div>
		<div class="col">
			<div class="card radius-10">
				<div class="card-body">
					<div class="d-flex align-items-start gap-2">
						<div>
							<p class="mb-0 fs-6">تعداد كاربران</p>
						</div>
						<div class="ms-auto widget-icon-small text-white bg-gradient-info">
							<ion-icon name="people-outline"></ion-icon>
						</div>
					</div>
					<div class="d-flex align-items-center mt-3">
						<div>
							<h4 class="mb-0">@Model.AdminIndex.TotalCustomer.ToString("#,0")</h4>
						</div>
					</div>
				</div>
			</div>
		</div>
		<div class="col">
			<div class="card radius-10">
				<div class="card-body">
					<div class="d-flex align-items-start gap-2">
						<div>
							<p class="mb-0 fs-6">تعداد فاكتور ها</p>
						</div>
						<div class="ms-auto widget-icon-small text-white bg-gradient-danger">
							<ion-icon name="bag-handle-outline"></ion-icon>
						</div>
					</div>
					<div class="d-flex align-items-center mt-3">
						<div>
							<h4 class="mb-0">@Model.AdminIndex.TotalOrders.ToString("#,0")</h4>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
}