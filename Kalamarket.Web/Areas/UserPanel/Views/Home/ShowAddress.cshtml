@using Kalamarket.Core.DTOs.UserPanel
@model ShowAddressViewModel
@{
    ViewData["Title"] = "ادرس";
}

<div class="container-main">
    <div class="d-block">
        <section class="profile-home">
            <div class="col-lg">
                <div class="post-item-profile order-1 d-block">
                    <partial name="_SideBar"/>
                    <div class="col-lg-9 col-md-9 col-xs-12 pl">
                        <div class="profile-content">
                            <div class="profile-stats">
                                <div class="profile-address">
                                    <div class="box-header">
                                        <span class="box-title">ادرس @Model.FullName</span>
                                    </div>
                                    <div class="profile-address-item">
                                        <div class="profile-address-item-top">
                                            <div class="profile-address-item-title">@Model.State ، @Model.City</div>
                                        </div>

                                        <div class="profile-address-content">
                                            <ul class="profile-address-info">
                                                <li>
                                                    <div class="profile-address-info-item location">
                                                        <i class="mdi mdi-map-outline"></i>
                                                        @Model.State ، @Model.City
                                                    </div>
                                                </li>
                                                <li>
                                                    <div class="profile-address-info-item location">
                                                        <i class="mdi mdi-phone"></i>
                                                        @Model.PhoneNumber
                                                    </div>
                                                </li>
                                                <li>
                                                    <div class="profile-address-info-item location">
                                                        <i class="mdi mdi-account"></i>
                                                        @Model.FullName
                                                    </div>
                                                </li>
                                                
                                                <li class="location-link">
                                                    <a href="/UserPanel/Address/@ViewBag.Id" class="edit-address-link">ویرایش آدرس</a>
                                                </li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
</div>

