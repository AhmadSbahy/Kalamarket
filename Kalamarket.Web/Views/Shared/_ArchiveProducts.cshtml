@using Kalamarket.Core.DTOs.Product
@model ShowProductListViewModel
<div class="col-lg-3 col-md-3 col-xs-12 order-1 d-block mb-3">
	<section class="product-box product product-type-simple">
		<div class="thumb">
			<a href="/Details/@Model.ProductId" class="d-block">
				<img src="~/Product/Thumb/@Model.ImageName">
			</a>
		</div>
		<div class="title">
			<a href="/Details/@Model.ProductId">
				@Model.ProductName
			</a>
		</div>
		@if (Model.ProductDiscount != null && Model.ProductDiscount.StartDate <= DateTime.Now && Model.ProductDiscount.EndDate >= DateTime.Now)
		{
			<div class="price">
				<del style="color: red;font-size: medium;">@Model.Price.ToString("#,0 تومان")</del>
				@{
					var price = (double)Model.Price * (1 - (double)Model.ProductDiscount.DiscountPercent / 100);
				}
				<h5 style="color: #6fc341;font-size:17px;">@price.ToString("#,0 تومان")</h5>
			</div>
		
			
		}
		else
		{
			<div class="price">
				<span class="amount">
					@Model.Price.ToString("#,0")
					<span>تومان</span>
				</span>
			</div>
		}
	</section>
</div>