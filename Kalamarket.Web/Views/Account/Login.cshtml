@using Kalamarket.Core.DTOs.User
@model LoginViewModle
@{
    ViewData["Title"] = "ورود";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}
<div class="container">
    <div class="row">
        <div class="col-lg">
            <section class="page-account-box">
                <div class="col-lg-6 col-md-6 col-xs-12 mx-auto">
                    <div class="ds-userlogin">
                        <a href="/" class="account-box-logo">digismart</a>
                        <div class="account-box">
                            <div class="account-box-headline">
                                <a href="/Login" class="login-ds active">
                                    <span class="title">ورود</span>
                                    <span class="sub-title">به کالامارکت</span>
                                </a>
                                <a href="/Register" class="register-ds">
                                    <span class="title">ثبت نام</span>
                                    <span class="sub-title">در کالامارکت</span>
                                </a>
                            </div>
                            <div class="Login-to-account mt-4">
                                <div class="account-box-content p-3">
                                    <h4>ورود به حساب کاربری</h4>
                                    <form asp-action="Login" method="post" class="form-account text-right">
                                        <div class="form-account-title">
                                            <label for="email-phone">ایمیل</label>
                                            <input asp-for="Email" class="number-email-input"/>
                                            
                                        </div>
                                        <div class="form-account-title">
                                            <label for="password">رمز عبور</label>
                                            <a href="/ForgetPassword" class="account-link-password">رمز خود را فراموش کرده ام</a>
                                            <input asp-for="Password" class="password-input" />
                                            <span class="text text-danger" asp-validation-for="Password"></span>
                                        </div>
                                        <div class="form-auth-row">
                                            <label for="#" class="ui-checkbox mt-1">
                                                <input asp-for="RememberMe"/>
                                                <span class="ui-checkbox-check"></span>
                                            </label>
                                            <label for="remember" class="remember-me mr-0">مرا به خاطر بسپار</label>
                                        </div>
                                        <span class="text text-danger" asp-validation-for="Email"></span>
                                        <div class="form-row-account">
                                            <button type="submit" class="btn btn-primary btn-login">ورود به کالامارکت</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>
</div>
