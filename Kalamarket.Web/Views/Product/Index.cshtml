	<div class="progress-wrap">
		<svg class="progress-circle svg-content" width="100%" height="100%" viewBox="-1 -1 102 102">
			<path d="M50,1 a49,49 0 0,1 0,98 a49,49 0 0,1 0,-98" />
		</svg>
	</div>
</div>
<script>
	function Cheng(id) {
		$("#pageId").val(id);
		$("#formfilter").submit();
	}
	function submitGroup() {
		$("#formfilter").submit();
	}
	function ChengeOrder(name) {
		$("#getType").val(name);
		$("#formfilter").submit();
	}
</script>
